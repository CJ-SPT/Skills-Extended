@page "/FirstAid"
@using ConfigEditor.Core.Config
@using ConfigEditor.Core.Models

<MudGrid>
    <MudItem xs="6">
        <MudSwitch
            Class="d-flex align-center justify-center mud-width-full py-8"
            @bind-Value="Enabled" 
            Label="Enabled" 
            Color="Color.Success"/>
    </MudItem>

    <MudItem xs="6">
        <MudNumericField
            @bind-Value="XpPerAction"
            Label="XP Per Action"
            Variant="Variant.Filled"
            Step=".05M"
            Min="0" Max="25"/>
    </MudItem>
    
    <MudItem xs="6">
        <MudNumericField
            @bind-Value="UsageReduction"
            Label="Resource Cost Reduction"
            Variant="Variant.Filled"
            Step=".05M"
            Min="0" Max="1"/>
    </MudItem>

    <MudItem xs="6">
        <MudNumericField
            @bind-Value="UsageReductionElite"
            Label="Resource Cost Reduction Elite"
            Variant="Variant.Filled"
            Step=".05M"
            Min="0" Max="1"/>
    </MudItem>
    
    <MudItem xs="6">
        <MudNumericField
            @bind-Value="SpeedBonus"
            Label="Medkit Speed Bonus"
            Variant="Variant.Filled"
            Step=".05M"
            Min="0" Max="1"/>
    </MudItem>
    
    <MudItem xs="6">
        <MudNumericField
            @bind-Value="SpeedBonusElite"
            Label="Medkit Speed Bonus Elite"
            Variant="Variant.Filled"
            Step=".05M"
            Min="0" Max="1"/>
    </MudItem>
</MudGrid>

@code {

    static FirstAidData Data => ConfigProvider.SkillsConfig.FirstAid;
    
    static bool Enabled
    {
        get => Data.Enabled;
        set => Data.Enabled = value;
    }

    static decimal XpPerAction
    {
        get => (decimal)Data.FirstAidXpPerAction;
        set => Data.FirstAidXpPerAction = (float)value;
    }
    
    static decimal UsageReduction
    {
        get => (decimal)Data.MedkitUsageReduction;
        set => Data.MedkitUsageReduction = (float)value;
    }
    
    static decimal UsageReductionElite
    {
        get => (decimal)Data.MedkitUsageReductionElite;
        set => Data.MedkitUsageReductionElite = (float)value;
    }
    
    static decimal SpeedBonus
    {
        get => (decimal)Data.ItemSpeedBonus;
        set => Data.ItemSpeedBonus = (float)value;
    }
    
    static decimal SpeedBonusElite
    {
        get => (decimal)Data.ItemSpeedBonusElite;
        set => Data.ItemSpeedBonusElite = (float)value;
    }
}